<?xml version="1.0" encoding="utf-8"?>
<resources>

  <item name="empty_image" type="id" />
  <item name="empty_text" type="id" />

  <item name="error_image" type="id" />
  <item name="error_text" type="id" />

  <item name="no_network_image" type="id" />
  <item name="no_network_text" type="id" />

  <item name="refresh_view" type="id" />

  <attr format="reference" name="styleNetworkStateView" />

  <!-- 网络加载状态View -->
  <declare-styleable name="NetworkStateView">

    <!-- 加载中的布局id -->
    <attr format="reference" name="loadingView" />

    <!-- 加载错误的布局id -->
    <attr format="reference" name="errorView" />
    <!-- 加载错误的布局图片 -->
    <attr format="reference" name="nsvErrorImage" />
    <!-- 加载错误的布局文字 -->
    <attr format="string" name="nsvErrorText" />

    <!-- 没有数据的布局id -->
    <attr format="reference" name="emptyView" />
    <!-- 没有数据的布局图片 -->
    <attr format="reference" name="nsvEmptyImage" />
    <!-- 没有数据的布局文字 -->
    <attr format="string" name="nsvEmptyText" />

    <!-- 没有网络的布局id -->
    <attr format="reference" name="noNetworkView" />
    <!-- 没有数据的布局图片 -->
    <attr format="reference" name="nsvNoNetworkImage" />
    <!-- 没有数据的布局文字 -->
    <attr format="string" name="nsvNoNetworkText" />

    <!-- 刷新的ImageView图片id -->
    <attr format="reference" name="nsvRefreshImage" />

    <!-- 文字大小 -->
    <attr format="dimension" name="nsvTextSize" />
    <!-- 文字颜色 -->
    <attr format="color" name="nsvTextColor" />
  </declare-styleable>

  <style name="NetworkStateView">

  </style>

  <!-- NetworkStateView样式 -->
  <style name="NetworkStateView.Style">
    <item name="loadingView">@layout/view_loading</item>
    <item name="errorView">@layout/view_network_error</item>
    <item name="nsvErrorImage">@drawable/ic_net_error</item>
    <item name="nsvErrorText">网络异常~</item>
    <item name="emptyView">@layout/view_empty</item>
    <item name="nsvEmptyImage">@drawable/ic_empty</item>
    <item name="nsvEmptyText">没有数据~</item>
    <item name="noNetworkView">@layout/view_no_network</item>
    <item name="nsvNoNetworkImage">@drawable/ic_no_network</item>
    <item name="nsvNoNetworkText">没有网络~</item>
    <item name="nsvRefreshImage">@drawable/ic_refresh</item>
    <item name="nsvTextSize">14sp</item>
    <item name="nsvTextColor">#8a000000</item>
  </style>

</resources>